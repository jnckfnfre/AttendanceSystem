<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .login-container {
            background: white;
            padding: 2rem;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 400px;
        }
        .utd-logo {
            max-width: 200px;
            margin-bottom: 2rem;
        }
        .form-control {
            margin-bottom: 1rem;
        }
        .btn-primary {
            background-color:rgb(255, 142, 3);
            border-color: rgb(255, 142, 3);
            width: 100%;
            padding: 0.75rem;
        }
        .btn-primary:hover {
            background-color:rgb(76, 208, 98);
            border-color: rgb(76, 208, 98);
        }
        .error-message {
            color: #dc3545;
            margin-top: 1rem;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="text-center">
            <img src="https://seeklogo.com/images/U/university-of-texas-at-dallas-logo-67A548B59A-seeklogo.com.png" alt="UTD Logo" class="utd-logo">
            <h2 class="mb-4">Quiz Login</h2>
        </div>
        
        <form method="post" action="/QuizLogin/Authenticate">
            <div class="mb-3">
                <label for="Utd_Id" class="form-label">UTD ID</label>
                <input type="text" class="form-control" id="Utd_Id" name="Utd_Id" required 
                       placeholder="Enter your UTD ID">
            </div>
            <div class="mb-3">
                <label for="First_Name" class="form-label">First Name</label>
                <input type="text" class="form-control" id="First_Name" name="First_Name" required 
                       placeholder="Enter First Name">
            </div>
            <div class="mb-3">
                <label for="Last_Name" class="form-label">Last Name</label>
                <input type="text" class="form-control" id="Last_Name" name="Last_Name" required 
                       placeholder="Enter Last Name">
            </div>
            <div class="mb-3">
                <label for="Password" class="form-label">Password</label>
                <input type="password" class="form-control" id="Password" name="Password" required 
                       placeholder="Enter your password">
            </div>
            
            <button type="submit" class="btn btn-primary">Sign In</button>
            
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="error-message">
                    @ViewBag.ErrorMessage
                </div>
            }
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 