@model AttendanceSystem.API.Models.SubmissionViewModel

@{
    ViewData["Title"] = "Quiz Submission";
}

<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="text-success text-center">âœ… Quiz Submitted Successfully!</h2>

        <p class="mt-3"><strong>Student:</strong> @Model.StudentName</p>
        <p><strong>Quiz:</strong> @Model.QuizTitle</p>
        <p><strong>Submitted At:</strong> @Model.SubmittedAt.ToString("f")</p>
        <p><strong>Total Questions Answered:</strong> @Model.Answers.Count</p>

        <hr />

        <h4>Your Answers</h4>
        <ul class="list-group">
            @foreach (var answer in Model.Answers)
            {
                <li class="list-group-item">
                    <strong>Q@answer.QuestionNumber:</strong> @answer.QuestionText <br />
                    <span class="text-primary">Your Answer:</span> @answer.SelectedOption
                </li>
            }
        </ul>
    </div>
</div>
